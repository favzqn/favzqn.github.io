---
import IndexLayout from '@/layouts/IndexLayout.astro'
import { getEntry, render } from 'astro:content'
import { themeConfig } from '@/config'

const booksEntry = await getEntry('resources', 'books')
const { Content } = booksEntry ? await render(booksEntry) : { Content: null }
---

<IndexLayout title={`Books - ${themeConfig.site.title}`} description="Books I read and recommend">
  <div style="margin-top: 2rem;">
    <h1 style="margin-bottom: 0.5rem; font-size: 2rem; font-weight: 700;">Books</h1>
    <p style="margin-bottom: 3rem; color: var(--text-secondary); font-size: 1.1rem;">
      Books I read and recommend
    </p>
    <div class="resource-page prose">
      {Content && <Content />}
    </div>
  </div>
</IndexLayout>

<style>
  .resource-page {
    margin-top: 2rem;
  }
</style>
