---
import IndexLayout from '@/layouts/IndexLayout.astro'
import { getEntry, render } from 'astro:content'
import { themeConfig } from '@/config'

const musicEntry = await getEntry('resources', 'music')
const { Content } = musicEntry ? await render(musicEntry) : { Content: null }
---

<IndexLayout title={`Music - ${themeConfig.site.title}`} description="Music I code to">
  <div style="margin-top: 2rem;">
    <h1 style="margin-bottom: 0.5rem; font-size: 2rem; font-weight: 700;">Music</h1>
    <p style="margin-bottom: 3rem; color: var(--text-secondary); font-size: 1.1rem;">
      Music I code to
    </p>
    <div class="resource-page prose">
      {Content && <Content />}
    </div>
  </div>
</IndexLayout>

<style>
  .resource-page {
    margin-top: 2rem;
  }
</style>
