---
import IndexLayout from '@/layouts/IndexLayout.astro'
import ExperienceWidget from '@/components/widgets/Experience.astro'
import { themeConfig } from '@/config'
---

<IndexLayout title={themeConfig.site.title} description={themeConfig.site.description}>
  <div style="margin-top: 2rem;">
    <h1 style="margin-bottom: 0.5rem; font-size: 2rem; font-weight: 700;">Experience</h1>
    <p style="margin-bottom: 3rem; color: var(--text-secondary); font-size: 1.1rem;">
      My professional journey and roles
    </p>
    <ExperienceWidget />
  </div>
</IndexLayout>
