---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <a href="/" class="title">{themeConfig.site.title}</a>
    <a href="/experience">Experience</a>
    <a href="/projects">Projects</a>
    <a href="/blog">Blog</a>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  nav .title {
    margin-right: auto;
  }
  header a {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    text-decoration: none;
    display: inline-block;
    white-space: nowrap;
  }
  
  @media (max-width: 640px) {
    nav {
      gap: 1rem;
    }
    header a:not(.title) {
      font-size: 0.875rem;
    }
  }
  
  @media (max-width: 480px) {
    nav {
      gap: 0.75rem;
      row-gap: 0.5rem;
    }
    header a:not(.title) {
      font-size: 0.8125rem;
    }
    nav .title {
      width: 100%;
      margin-bottom: 0.25rem;
    }
  }
</style>
